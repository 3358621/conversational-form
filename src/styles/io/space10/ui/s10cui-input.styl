@import "nib"
@import "rupture"
@import "../s10cui-variables"

.s10cui-input
	// resets..
	&:-webkit-autofill
		// -webkit-box-shadow 0 0 0px 1000px white inset
		background-color white

	&:focus, &:focus, &:focus
		outline none
		-webkit-appearance none
		box-shadow 0px 0px 10px red
	
	border-radius 0
	border none
	-webkit-appearance none

	// styling
	transition box-shadow $anim-time $anim-easeOut
	width 100%
	height 40px
	background white
	box-shadow 0px 0px 2px red
	padding 5px 5px 5px 15px


