cf-chat
	display block
	width 100%
	background white
	height s("calc(100% - %s)", $input-field-height)

	padding 20px

	overflow-x hidden
	// overflow-y scroll

	// flow children to bottom
	display flex
	flex-flow column nowrap
	justify-content flex-end
	align-items baseline

	will-change padding-bottom
	transition padding-bottom $anim-time * 0.5 $anim-easeOut

