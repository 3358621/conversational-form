@import "nib"
@import "rupture"
@import "../../cf-variables"

cf-input-control-elements
	width auto
	height auto
	overflow hidden
	display block
	position relative
	position relative
	z-index 0

	.cf-button
		margin-bottom 10px
		display inline-block

		&.hide
			display none

	&.one-row
		// remember to set values in ControlElements.ts
		cf-list
			height 52px
		cf-list-button
			opacity 0
			pointer-events none
	&.two-row
		cf-list
			height 102px
	
	&.hide-nav-buttons
		cf-list-button
			pointer-events none
			opacity 0

cf-list, cf-list-button
	will-change height
	transition height $anim-time * 0.5 $anim-easeOut
	
cf-list
	display block
	height 0px

	&.disabled
		pointer-events none
	
cf-info
	position absolute
	pointer-events none
	z-index 0
	left 0px
	top 50%
	height 20px
	width 400px
	transform translateY(-50%)
	color $color-input-text

	strong
		font-weight 900

cf-list-button
	display block
	position absolute
	z-index 2
	height calc(100% - 16px)
	width 38px
	cursor pointer
	will-change opacity
	transition opacity $anim-time * 0.5 $anim-easeOut

	+above($breakpoint-1)
		&:hover:nth-child(1)
			background linear-gradient(to left, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 75%)
			&:after
				animation cf-arrow-left $anim-time $anim-easeInOut
		&:hover:nth-child(2)
			background linear-gradient(to right, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 75%)
			&:after
				animation cf-arrow-right $anim-time $anim-easeInOut
	
	&.hide
		pointer-events none

		&:after
			opacity 0.1

	&:active
		&:after
			transform scale(0.75, 0.75)

	&:nth-child(1)
		background linear-gradient(to left, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%)
		left 0px

		&:after
			background-image url("data:image/svg+xml;charset=utf-8;base64,")

	&:nth-child(2)
		right 0px
		background linear-gradient(to right, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%)

		&:after
			background-image url("data:image/svg+xml;charset=utf-8;base64,")

	&:after
		content ""
		display block
		width 6px
		height 10px
		position absolute
		background-size 6px 10px
		background-repeat no-repeat
		top calc(50% - 5px)
		left calc(50% - 3px)
		will-change opacity
		transition opacity $anim-time * 0.5 $anim-easeOut

@keyframes cf-arrow-right
	0%
		transform translateX(0px)
		opacity 1
	40%
		transform translateX(20px)
		opacity 0
	40.001%
		transform translateX(-20px)
		opacity 0
	80%
		transform translateX(4px)
		opacity 1
	90%
		transform translateX(-2px)
		opacity 1
	100%
		transform translateX(0px)
		opacity 1

@keyframes cf-arrow-left
	0%
		transform translateX(0px)
		opacity 1
	40%
		transform translateX(-20px)
		opacity 0
	40.001%
		transform translateX(20px)
		opacity 0
	80%
		transform translateX(-4px)
		opacity 1
	90%
		transform translateX(2px)
		opacity 1
	100%
		transform translateX(0px)
		opacity 1