@import "nib"
@import "rupture"

s10cui-chat
	display block
	width 100%
	background pink
	height 100%

	padding 20px

	overflow-x hidden
	overflow-y scroll

	// TODO: Style scrollbars...
	&::-webkit-scrollbar
		background red
		width 12px
	&::-webkit-scrollbar-button
		background yellow
		width 12px
	&::-webkit-scrollbar-track
		background brown
		width 12px
	&::-webkit-scrollbar-track-piece
		background pink
		width 12px
	&::-webkit-scrollbar-thumb
		background orange
		width 12px
	&::-webkit-scrollbar-corner
		background blue
		width 12px
	&::-webkit-resizer
		background green
		width 12px
